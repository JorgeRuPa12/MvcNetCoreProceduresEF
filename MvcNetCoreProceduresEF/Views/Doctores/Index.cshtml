@model IEnumerable<MvcNetCoreProceduresEF.Models.Doctor>
@{
    List<string> especialidades = ViewData["ESPECIALIDADES"] as List<string>;
}

<h1>Doctores Especialidad</h1>

<form method="post">
    <label>Especialidad</label>
    <select name="especialidad" class="form-control">
        @foreach(string espe in especialidades){
            <option value="@espe">@espe</option>
        }
    </select>
    <label>Incremento</label>
    <input type="text" name="salario" class="form-control"/>
    <button class="btn btn-outline-warning">Actualizar</button>
</form>

@if (Model != null) {
    <table class="table table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.IdHospital)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IdDoctor)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Apellido)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Especialidad)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Salario)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdHospital)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IdDoctor)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Apellido)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Especialidad)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Salario)
                    </td>
                </tr>
            }
        </tbody>
    </table>


}
